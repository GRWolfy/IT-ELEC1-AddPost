<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="500dp"
    android:paddingBottom="10dp"
    android:layout_marginTop="20dp"
    android:background="@color/container"
    android:layout_weight="1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtFirstLetter"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:textSize="60dp"
            android:background="@color/purple_200"
            android:textColor="@color/white"
            android:layout_weight="0"
            android:text="W" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtOutput_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Granth Regg Wolf"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/txtDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textColor="@color/white_text"
                android:text="Date" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtOutput_Caption"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:text="The wind, the sea, all of my sorrow will be washed away." />

        <ImageView
            android:id="@+id/imgOutput_Post"
            android:layout_width="411dp"
            android:layout_height="305dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>

</LinearLayout>